<h1>New Creature Form</h1>
<hr>
<%= form_for :creature, url: "/creatures", method: "post" do |f| %>
  <div class="form-group ">

    <%= f.text_field :name, placeholder: "Add a name", class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.text_field :description, placeholder: "Add a description", class: "form-control" %>
  </div>
<%= f.submit class: "btn btn-success" %>
<% end %>
