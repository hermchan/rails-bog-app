<%= form_for @creature, url: "/creature", method: "post" do |f| %>

<div class="form-group col-md-6 col-md-offset-3">
  <%= f.label :Name %>
  <%= f.text_field :name, class:"form-control"%>
  </div>
  <div class="form-group col-md-6 col-md-offset-3">
  <%= f.label :Description %>
  <%= f.text_area :description, class:"form-control"%>
  <%= f.submit %>
  </div>

<% end %>
